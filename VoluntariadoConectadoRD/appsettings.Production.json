{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=${SQLITE_DB_PATH:=./App_Data/voluntariado.db}"
  },
  "JwtSettings": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "Issuer": "VoluntariadoConectadoRD",
    "Audience": "VoluntariadoConectadoRD-Users",
    "ExpirationMinutes": "60"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Error",
      "System": "Error"
    }
  },
  "AllowedHosts": "voluntariado-conectado.azurewebsites.net,*.voluntariadoconectado.rd",
  "BaseUrl": "${BASE_URL}",
  "EmailSettings": {
    "SmtpServer": "${SMTP_SERVER}",
    "SmtpPort": "${SMTP_PORT}",
    "SmtpUsername": "${SMTP_USERNAME}",
    "SmtpPassword": "${SMTP_PASSWORD}",
    "FromEmail": "${FROM_EMAIL}",
    "FromName": "Voluntariado Conectado RD"
  },
  "ApplicationInsights": {
    "InstrumentationKey": "${APPLICATIONINSIGHTS_INSTRUMENTATION_KEY}"
  },
  "Security": {
    "EnableRateLimiting": true,
    "MaxRequestsPerMinute": 60,
    "RequireHttps": true,
    "EnableSecurityHeaders": true
  },
  "SQLite": {
    "EnableWALMode": true,
    "BusyTimeout": 30000,
    "JournalMode": "WAL",
    "SynchronousMode": "NORMAL",
    "CacheSize": 10000
  },
  "FileStorage": {
    "UploadsPath": "./uploads/",
    "MaxFileSize": 5242880,
    "AllowedExtensions": [".jpg", ".jpeg", ".png", ".gif", ".pdf"]
  }
}